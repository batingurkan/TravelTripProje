@using TravelTripProje.Models.Siniflar
@model List<Blog>



<div class="box1-left">
   @foreach (var x in Model)
   {
       

    <div class="bot-img">
        <img src="@x.BlogImage" alt="" />
    </div>
    <div class="bot-desc1">
            <p>
                @if (x.Aciklama is not null && x.Aciklama.Length > 99)
                {
                <p>@x.Aciklama.Substring(0,70)... </p>
                }
                else
                {
                <p>@x.Aciklama</p>
                }</p>
    </div>
    <div class="clear"></div>
       }
</div>