@using TravelTripProje.Models.Siniflar
@model HomeIndexModel



<div class="header-banner">
	<div class="wrap">
		<div class="banner">
			<div class="indent">
				<h2 class="indent-left margin-bot" style="margin-left:80px;"stye>Tatil & Seyahat Bloğum</h2>
				<div class="banner-left">
					<div class="con-text">
						<div class="grid1-img">
							<img src="~/web/images/glass.png" alt="">
						</div>
						<div class="grid1-desc">
							<p>Restorantlar</p>
						</div>
						<div class="clear"></div>
					</div>
					<div class="con-text">
						<div class="grid1-img">
							<img src="~/web/images/flight.png" alt="">
						</div>
						<div class="grid1-desc">
							<p>Uçuşlar</p>
						</div>
						<div class="clear"></div>
					</div>
					<div class="con-text">
						<div class="grid1-img">
							<img src="~/web/images/group.png" alt="">
						</div>
						<div class="grid1-desc">
							<p>Yapılacak Şeyler</p>
						</div>
						<div class="clear"></div>
					</div>
					<div class="con-text">
						<div class="grid1-img">
							<img src="~/web/images/key.png" alt="">
						</div>
						<div class="grid1-desc">
							<p>Araba Kiralama</p>
						</div>
						<div class="clear"></div>
					</div>
					<div class="clear"></div>
				</div>
				<div class="header_bottom_right_images">

					<div class="slider">
						<ul class="rslides" id="slider1">
							@foreach (var x in Model.Bloglar)
							{


								<li><img src="@x.BlogImage" alt="" style="width:650px;height:375px;"></li>
							}
						</ul>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
	</div>
</div>
<div class"content">
	<div class="wrap">
		<div class="wrapper">
			<div class="con-top">

				<h3>Tatil Seyahat Bloğuna Hoşgeldiniz!</h3>
				<p>
					Bu proje mayıs 2023 tarhinde başlayıp yine mayıs 2023 tarihinde anasayfa düzenlemelerine getirdik.
					Gezip gördüğüm yerleri sizlerle paylaşmak için kodlamasını tamamen kendim yaptığım mvc6 üzerine kurulu dinamil bir wep projesi geliştirdim.
					Hem Türkiye'den hem de yurt dışından gezip gördüğüm yerleri blog yazıları olarak sizlerle paylaşma niyetindeyim.
					Umuyorum ki yazdıklarımı beğenirsiniz,keyifli okumalar dilerim.
				</p>
			</div>
			<div class="con-bot">
				@{
					await Html.RenderPartialAsync("Partial1", Model.Bloglar);
				}


				@{
					await Html.RenderPartialAsync("Partial2", Model.AraBloglar);
				}

				<div class="clear"></div>
			</div>
			<div class="grids">
				<div class="box1">


					@{
						await Html.RenderPartialAsync("Partial3", Model.ListBlog);
					}
					<div class="padding1">
   
					@{
						await Html.RenderPartialAsync("Partial4", Model.ResmBlog);
					}
						@{
							await Html.RenderPartialAsync("Partial5", Model.ResmBlog2);
						}
					</div>
					<div class="clear"></div>
				</div>
			</div>
		</div>
	</div>
</div>

