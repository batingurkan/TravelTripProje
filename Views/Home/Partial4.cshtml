@using TravelTripProje.Models.Siniflar
@model List<Blog>


    <h4>En Beğendiğim Yerler</h4>
    
    <div class="box-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <img src="@x.BlogImage" alt="" />
        </div>
        <div class="bot-desc">
                <p>
                    @if (x.Aciklama is not null && x.Aciklama.Length > 99)
                    {
                    <p>@x.Aciklama.Substring(0,75)... </p>
                    }
                    else
                    {
                    <p>@x.Aciklama</p>
                    }
                </p>
        </div>
        <div class="clear"></div>
        }
    </div>
   

 

